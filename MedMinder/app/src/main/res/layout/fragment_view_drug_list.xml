<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrugListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="phillips.com.medminder.ViewDrugListFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/viewDrugListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug List"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="47dp"
        tools:layout_conversion_absoluteWidth="257dp" />

    <Button
        android:id="@+id/addDrugBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:text="ADD Drug"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drugListView"
        tools:layout_conversion_absoluteHeight="118dp"
        tools:layout_conversion_absoluteWidth="1dp" />

    <ListView
        android:id="@+id/drugListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/input_register_bg"
        app:layout_constraintBottom_toTopOf="@+id/addDrugBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDrugListTitle"
        tools:layout_conversion_absoluteHeight="1dp"
        tools:layout_conversion_absoluteWidth="1dp" />

    <Button
        android:id="@+id/today_btn"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        android:background="@color/input_register_bg"
        android:text="Today's"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/drugListView"
        app:layout_constraintEnd_toStartOf="@+id/all_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/all_btn"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="ALL"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/drugListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
