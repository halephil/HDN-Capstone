<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="phillips.com.medminder.EditDrugInfoActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Drug Name"/>

    <EditText
        android:id="@+id/drug_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4af9ff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:text="Additional Information"/>

    <EditText
        android:id="@+id/drug_info"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#4af9ff"/>

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp">

       <TableRow>
           <TextView
               android:layout_weight="4"
               android:text="Doses per day"/>

           <EditText
               android:layout_weight="1"
               android:background="#4af"/>
       </TableRow>

       <TableRow android:layout_marginTop="8dp">
           <TextView
               android:layout_weight="4"
               android:text="Quantity per dose"/>

           <EditText
               android:id="@+id/qty_per_dose"
               android:layout_weight="1"
               android:background="#4af"/>
       </TableRow>


   </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="0.53">

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="onSaveButtonClick"
            android:text="Save"/>

        <Button
            android:id="@+id/qr_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="onQRButtonClick"
            android:text="QR"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="onCancelButtonClick"
            android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>












































